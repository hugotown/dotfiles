# AI Services API Keys Template
#
# INSTRUCCIONES:
# 1. Copia este archivo: cp ai.yaml.template ai.yaml
# 2. Edita con sops: sops ai.yaml
# 3. Reemplaza los valores de ejemplo con tus API keys reales
# 4. Guarda (sops encriptará automáticamente)
#
# Los secretos aquí definidos estarán disponibles en:
# - config.sops.secrets.openai_api_key.path
# - config.sops.secrets.anthropic_api_key.path
# - config.sops.secrets.gemini_api_key.path

# OpenAI API Key (ejemplo: sk-proj-xxxxxxxxxxxxx)
openai_api_key: "TU_OPENAI_API_KEY_AQUI"

# Anthropic Claude API Key (ejemplo: sk-ant-xxxxxxxxxxxxx)
anthropic_api_key: "TU_ANTHROPIC_API_KEY_AQUI"

# Google Gemini API Key
gemini_api_key: "TU_GEMINI_API_KEY_AQUI"

